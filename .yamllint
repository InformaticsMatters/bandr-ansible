---

# Do not use our comprehensive/standard lint rules
# as this repository contains a number of YAML files
# cloned (copied) from other sources.

ignore: |
  .github/
  roles/recovery/templates/job.yaml.j2
  roles/backup/templates/cronjob-database-backup.yaml.j2
  roles/backup/templates/job-database-backup.yaml.j2
  roles/backup/templates/pvc.yaml.j2

rules:
  indentation:
    spaces: 2
    indent-sequences: no
  trailing-spaces: {}
  truthy:
    allowed-values:
    - 'yes'
    - 'no'
    - 'true'
    - 'false'
  new-lines:
    type: unix
  new-line-at-end-of-file: enable
  key-duplicates: {}
  hyphens:
    max-spaces-after: 1
  empty-lines:
    max: 1
  document-start:
    present: yes
  document-end:
    present: no
  colons:
    max-spaces-before: 0
    max-spaces-after: 1
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1
